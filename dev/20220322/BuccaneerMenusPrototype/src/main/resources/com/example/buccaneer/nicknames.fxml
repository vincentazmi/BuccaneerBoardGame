<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minHeight="720.0" minWidth="1280.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.buccaneer.NicknamesController">
    <children>
        <GridPane VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backAction" text="Back"
                        GridPane.halignment="LEFT" GridPane.valignment="TOP"/>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" GridPane.columnIndex="1"
                      GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <children>
                        <Label text="Player 1"/>
                        <TextField fx:id="p1Field" maxWidth="100.0" promptText="Enter nickname"/>
                        <Label layoutX="210.0" layoutY="109.0" text="Player 2"/>
                        <TextField fx:id="p2Field" layoutX="174.0" layoutY="100.0" maxWidth="100.0"
                                   promptText="Enter nickname"/>
                        <Label layoutX="210.0" layoutY="88.0" text="Player 3"/>
                        <TextField fx:id="p3Field" layoutX="174.0" layoutY="88.0" maxWidth="100.0"
                                   promptText="Enter nickname"/>
                        <Label layoutX="210.0" layoutY="131.0" text="Player 4"/>
                        <TextField fx:id="p4Field" layoutX="174.0" layoutY="166.0" maxWidth="100.0"
                                   promptText="Enter nickname"/>
                        <Button fx:id="playBtn" onAction="#playAction" mnemonicParsing="false" text="Play"/>
                    </children>
                </VBox>
            </children>
        </GridPane>
    </children>

</VBox>
