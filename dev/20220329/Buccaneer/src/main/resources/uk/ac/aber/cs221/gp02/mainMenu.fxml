<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<StackPane minHeight="720.0" minWidth="1280.0" prefHeight="150.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.aber.cs221.gp02.MainMenuController">
    <children>
        <fx:include source="background.fxml"/>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <center>
                <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
                    <Button onAction="#continueBtnAction" text="Continue"/>
                    <Button onAction="#newGameBtnAction" text="New Game"/>
                    <Button onAction="#quitBtnAction" text="Quit"/>
                </VBox>
            </center>
            <top>
                <Button onAction="#rulesBtnAction" mnemonicParsing="false" text="Rules" BorderPane.alignment="TOP_RIGHT"/>
            </top>
        </BorderPane>
    </children>
</StackPane>
