<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<?import javafx.scene.shape.Rectangle?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.buccaneer.BackgroundController"
           prefHeight="400.0" prefWidth="600.0">
    <Rectangle fx:id="sky" height="1500" width="10000"/>

    <ImageView fx:id="boat" fitHeight="900.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../../images/bg_boat.png"/>
        </image>
    </ImageView>
    <ImageView fx:id="ocean" fitHeight="800.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@../../../images/bg_ocean.png"/>
        </image>
    </ImageView>
    <ImageView fitHeight="720.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../../images/bg_island.png"/>
        </image>
    </ImageView>
</StackPane>